---
export interface Props {
  img: string,
  title: string,
  description: string,
  url: string
}

const { img, title, description, url } = Astro.props
---

<a href={url}>
  <article>
    <img src={img} alt="">
    <div class="content">
      <h2 class="title">{title}</h2>
      <h4 class="description">{description}</h4>
    </div>
  </article>
</a>


<style>
  a {
    all: unset;
    cursor: pointer;
  }

  article {
    background-color: var(--accent-color);
    width: 30rem;
    height: 20rem;
    border-radius: 2rem;
    border-top-left-radius: 3rem;
    border-top-right-radius: 3rem;
    display: flex;
    flex-flow: column nowrap;
    transition-duration: 0.5s;
  }
  article:hover img {
    height: 30%
  }
  article:hover .content .description {
    display: block;
  }

  img {
    width: 100%;
    height: 70%;
    border-top-left-radius: 2rem;
    border-top-right-radius: 2rem;
    object-fit: cover;
    transition-duration: 0.5s;
  }

  .content {
    flex-grow: 1;
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: space-around;
  }

  .title, .description {
    margin-top: 0;
    margin-bottom: 0;
    transition-duration: 0.5s;
    text-align: center;
  }

  .description {
    display: none;
    font-family: 'Courier New', Courier, monospace;
  }
</style>